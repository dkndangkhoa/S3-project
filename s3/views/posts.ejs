<!-- views/posts.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
</head>
<body>
    <h1>Posts</h1>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <% if (post.image) { %>
                    <img src="<%= post.image %>" alt="Post Image">
                <% } %>
    
                <h2><%= post.name %></h2>
                <p><%= post.school %></p>
                <p><%= post.country %></p>
                <p><%= post.title %></p>
                <p><%= post.content %></p>
            </li>
        <% }); %>
    </ul>
    
</body>
</html>
