<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Tutorial</title>
</head>
<body>

    <h1>Delete Tutorials</h1>

    <% if (typeof successMessage !== 'undefined') { %>
        <p><%= successMessage %></p>
    <% } else if (typeof errorMessage !== 'undefined') { %>
        <p><%= errorMessage %></p>
    <% } %>

    <% tutorials.forEach(category => { %>
        <h2><%= category.name %></h2>
        <ul>
            <% category.tutorials.forEach(tutorial => { %>
                <li>
                    <strong><%= tutorial.title %></strong>
                    
                    <!-- Edit Form -->
                    <form action="/edit-tutorial/<%= tutorial._id %>" method="get" style="display:inline;">
                        <button class="edit-btn" type="submit">Edit</button>
                    </form>

                    <!-- Delete Form -->
                    <form action="/delete-tutorial" method="post" style="display:inline;">
                        <input type="hidden" name="selectedTutorial" value="<%= tutorial._id %>">
                        <button class="delete-btn" type="submit">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    <% }); %>
    

</body>

<style>

    *{
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }
    
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }

    h1 {
        color: #333;
    }

    p {
        margin: 10px 0;
    }
    
    ul {
        list-style: none;
        padding: 0;
    }

    li {
        margin-bottom: 15px;
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 5px;
        background-color: #fff;
        position: relative;
    }

    strong {
        color: #333;
    }

    form {
        display: inline;
        margin-left: 10px;
    }

    .edit-btn {
        background-color: #28a745;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
    }

    .edit-btn:hover {
        background-color: #218838;
    }

    .delete-btn {
        background-color: #dc3545;
        color: #fff;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
    }

    .delete-btn:hover {
        background-color: #c82333;
    }
</style>

</html>
